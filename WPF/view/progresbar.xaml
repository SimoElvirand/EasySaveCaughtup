<Page x:Class="WPF.view.progresbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.view"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
          Title="Progress Bar Example" Height="200" Width="300">
    <Grid>
        <ProgressBar Name="progressBar" Minimum="0" Maximum="100" Value="0" />
        <Button Content="Start" Click="StartButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50" />
        <Button Content="Pause" Click="PauseButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50" />
        <Button Content="Stop" Click="StopButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="50" />
    </Grid>
</Page>
